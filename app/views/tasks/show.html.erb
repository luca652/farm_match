<h1>Task Showpage</h1>

<div>
  <h4>Task</h4>
    <%= link_to "Edit Task", edit_step_one_task_path(@task) %>
    <%= link_to "Destroy Task", task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    <p>headline: <%= @task.headline %> </p>
    <p>category: <%= @task.category %> </p>
    <p> subcategory: <%= @task.subcategory %> </p>
    <p> description: <%= @task.description %></p>

    <%= link_to "Answer questions about your services", show_questionnaire_task_path(@task) %>
</div>

<h4>Services</h4>
  <ul>
    <% @services.each do |service| %>
      <li><%= service.name %></li>
    <% end %>
  </ul>

<h4>Questionnaire</h4>
<% @questions.each do |question| %>
  <p><%= question.answer_title %>:</p>
    <% case question.kind.to_sym %>
      <% when :multiple_choice %>
        <%= question.answer["value"] %>
      <% when :area %>
        <p><%= question.answer["unit"] %> <%= question.answer["value"] %></p>
      <% when :multiple_choice_with_other %>
        <% if question.answer["question"].nil? %>
          <%= question.answer["other"] %>
        <% else %>
          <%= question.answer["answer"]%>
        <% end %>
      <% end %>
    <% end %>
