<div class="container">
  <div class="form-container">
    <%= simple_form_for @task, html: { class: "form" } do |f| %>

      <%= link_to "Back", back_to_step_two %>

      <% if @task.errors.any? %>
        <div class="error-message">
          <%= @task.errors.full_messages.to_sentence.capitalize %>
        </div>
      <% end %>

      <%= f.input :description, input_html: { autofocus: true, class: "form-field" } %>

      <div class="form-submit">
      <%= f.button :submit, submit_text_step_three, class: "btn--primary" %>
      </div>
    <% end %>
  </div>
</div>
