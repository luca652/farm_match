<h1>New Job</h1>

<%= simple_form_for @job do |f| %>
  <div>
    <%= f.input :headline %>
  </div>

  <div>
    <%= f.input :description %>
  </div>

  <div>
    <%= f.hidden_field :user_id, value: 1 %>
  </div>

  <div data-controller="category" data-category-url-value="<%= subcategories_jobs_path %>">
    <div>
      <%= f.input :category, collection: @categories,
                  input_html: { data: { action: "change->category#subcategory" } } %>
    </div>
    <div>
      <%= f.input :subcategory,
                  collection: [],
                  input_html: { data: { category_target: "subcategory",
                                                 action: "change->category#subcategory_select"} } %>
    </div>
  </div>

  <h1> Services </h1>
  <%= f.simple_fields_for :services do |service_form| %>
    <% @service_options.each do |option|%>
      <%= check_box_tag "job[services_attributes][][name]", option %>
      <%= label_tag option %><br>
    <% end %>
  <% end %>

  <div>
    <%= f.button :submit, 'Create Job' %>
  </div>
<% end %>
